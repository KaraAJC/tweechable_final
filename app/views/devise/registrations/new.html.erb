<div class="form-container">

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :username, class: 'sr-only' %>
      <%= f.text_field :username, size: 40, autofocus: true, required: true, placeholder: 'Username' %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.email_field :email, size: 40, required: true, placeholder: 'Email'  %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password, autocomplete: "off", size: 40, required: true, placeholder: "Password (#{@minimum_password_length} characters minimum)"  %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'sr-only' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", size: 40, required: true, placeholder: 'Confirm password'  %>
    </div>

    <div class="form-group">
      <%= f.label :how_did_you_find_tweechable_?, class: 'sr-only' %>
      <%= f.text_field :how_found_tweechable, size: 40, required: true, placeholder: 'How did you find Tweechable?' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign Me Up!", class: 'btn btn-default'  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
